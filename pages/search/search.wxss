
.flex-wrp{
    height: 100px;
    display:flex;
    background-color: #FFFFFF;
}

.flex-item{
  width: 100px;
  background-color: #ddd;
}

.section__head{
  width: 100%;
}
.search__form{
  width: 96%;
  position: relative;
  display: block;
  margin: 4px 2%;
  border-radius: 2px;
  height: 30px;
  line-height: 30px;
  background-color: #ededed;
}
.search__input{
  height: 30px;
  line-height: 30px;
  margin-left: 18px;
  font-size: 14px;
  color: #666;
}
.search__icon{
  position: absolute;
  top: 7px;
  left: 4px;
}
.section__content{
  background-color: #eee;
}
.section__item{
  flex-direction:column;
  overflow: hidden;
  margin-bottom: 6px;
  background:#fff;
}

.section__item:last-child{
  margin-bottom: 0;
  /*border-bottom:1px solid #efefef; */
}

.section__item--mod{
  
  padding: 0 5px 10px;
}
.section__item--image{
  width: 100vh;
  height: 180px;
  align-items: center;
  position: relative;
}
.section__item--title{
  font-size:20px;
  color:#333;
  margin:5px 2%;
  width:96%;
  display:block;
  flex-direction:column;
  align-items:center;
  line-height:26px;


}
.section__item--origin{
  font-size: 12px;
  color: #999;
  margin: 0 10px 0 2%;
  padding: 1px 3px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.section__item--time{
  font-size: 12px;
  color: #999;
}


.nodata{
  width: 100%;
  text-align: center;
  margin: 100px 0;
}

.nodata__img{
  margin: 10px auto;
  width: 128px;
  height: 128px;
  display: block;
}

.nodata__text{
  color: #999;
  font-size: 14px;
}

.bgfff{
  background-color: #fff;
}