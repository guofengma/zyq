.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 140px;
  width: 100%;
  background-color: #d29f2d;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 30rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.userFav {
  width: 100%;
  /*margin: 10px 2%;*/
}

.userFav__title{
  color: #999;
  font-size: 13px;
}

.menu{
  width: 100%;
  padding:10px 0;
}

.menu .item{
  width:90%;
  display:block;
  margin:0 5%;
  font-size:30rpx;
  border-bottom:1px solid #eee;
  padding:15px 0;
  background:#fff url(http://ac-yvjkjytn.clouddn.com/540dfd49568f75bd0e11.png) no-repeat right center;
  background-size:20px;

}