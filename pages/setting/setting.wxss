/*tab切换*/
.tab{
	display: flex;
	flex-direction: column;
	height: 100%;
  background: #fff;
}
.tab-nav{
	height: 80rpx;
	background: #fff;
	border-bottom: 1rpx solid #eee;
	display: flex;
	line-height: 79rpx;
	position: relative;
}
.tab-nav text{
	display: block;
	flex: 1;
	text-align: center;
	width: 25%;
  font-size: 15px;
  color: #999;
}
.tab-nav text.active{
	color: #d29f2d;
}
.tab-line{
	position: absolute;
	left: 0;
	bottom: -1rpx;
	height: 4rpx;
	background: #d29f2d;
	transition: all 0.3s;
}
.tab-content{
	width: 400%;
	height: 300px;
	overflow: hidden;
	display: flex;
}
.tab-content .tab-panel{
	height: 100%;
	overflow-y: auto;
	overflow-x: hidden;
	flex: 1;
	/* flex: 0 0 20%; */
}
.articles{
  margin-top: 35px;
  width: 100%;
  height: 100%;
}

.article{
  padding: 8px;
  border-bottom: 1px dashed #eee;
  margin: 5px 0;
}

.article::after{
    content:"";
    clear:both;
    position:absoult;
    height:0;
}

.article:last-child{
    border-bottom: none;
}

.left{
    float:left;
    width: 67%;
    height: 80px;
    position:relative;
}

.title{
    font-size:18px;
}

.subTitle{
    font-size: 15px;
    color:#aaa;
}

.date{
    position:absolute;
    right: 0;
    bottom: 0;
}

.date text{
    color:#aaa;
    padding-right : 5px;
    font-size : 12px;
}

.cnt{
  position:absolute;
    left: 0;
    bottom: 0;
    font-size: 13px;
  color: #999;
  margin: 0 10px 0 0;
  padding: 1px 3px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.cnt text{
    color:#aaa;
    font-size : 12px;
}

.right{
    float:right;
    width: 30%;
}

.right image{
    width: 100%;
    height: 80px;
    display: block;
}

.clearfix:before, .clearfix:after { content: " "; display: table; clear: both;}
.clearfix:after { clear: both; }

